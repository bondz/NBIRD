{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es2016.array.include",
      "es2015.promise"
    ],
    "outDir": "build"
  },
  "filesGlob": [
    "src/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
